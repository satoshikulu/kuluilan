[32m+[m[32m    async function autoLoginFromURL() {[m
[32m+[m[32m        try {[m
[32m+[m[32m            const params = new URLSearchParams(window.location.search);[m
[32m+[m[32m            const email = params.get('username') || params.get('email');[m
[32m+[m[32m            const password = params.get('password') || params.get('pass');[m
[32m+[m[32m            if (!email || !password) return;[m
[32m+[m
[32m+[m[32m            const { data, error } = await supabase.auth.signInWithPassword({ email, password });[m
[32m+[m[32m            if (error) {[m
[32m+[m[32m                alert('Otomatik giri≈ü ba≈üarƒ±sƒ±z: ' + error.message);[m
[32m+[m[32m                return;[m
[32m+[m[32m            }[m
[32m+[m[32m            if (email === ADMIN_EMAIL) {[m
[32m+[m[32m                localStorage.setItem('adminLoggedIn', 'true');[m
[32m+[m[32m                showAdminPanel();[m
[32m+[m[32m            } else {[m
[32m+[m[32m                alert('Otomatik giri≈ü ba≈üarƒ±lƒ± ancak admin yetkisi yok.');[m
